<div class="row ml-1 mb-4">
    <%= link_to 'Back to friends list', friends_path, class: "btn btn-sm btn-success mt-2"%>
</div>

<h2>User Details</h2>

<div class="card card-header results-block mb-3">

    <table class="col-md-12">
        <tbody class="table table-borderless">
            <tr class="my-3">
                <td><strong>Name: </strong> <%= @user.full_name %></td>
                <td><strong>Email: </strong> <%= @user.email %></td>
                <td>
                    <% if current_user.not_friends_with?(@user.id) %>
                        <%= link_to 'Follow friend?', friendships_path(friend: @user), class: 'btn btn-sm btn-success', method: :post %>
                    <% else %>
                        <span class="badge badge-secondary">
                            You are friends
                        </span>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>        
</div>

<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list'%>
<% else %>
    <p class="lead">This user is not tracking any stocks</p>
<% end %>
