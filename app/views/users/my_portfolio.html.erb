<h1>My Portfolio</h1>

<div class="search-area">
    <h3>Search Stocks</h3>

    <%= form_with url: search_stock_path, method: :get, local: false do |f| %>
        <div class="form-group row">
            <div class="col-md-9 pr-0">
                <%= f.text_field :stock, placeholder: 'Stock ticker symbol', autofocus:true, id:"search-input", class: 'form-control form-control-lg' %>
            </div>
            
            <div class="col-md-3 pl-0">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %> 
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="result" class="mb-3">
</div>

<% if !@tracked_stocks.empty? %>
    <div class="row ml-1 mt-1 mb-3">
        <%= button_to 'Refresh stock prices', refresh_stocks_path, remote:"true", method: :put, id:"refresh-btn", class: "btn btn-success" %>
    </div>

    <div id="stocks-list">
        <%= render 'stocks/list'%>
    </div>
<% end %>

