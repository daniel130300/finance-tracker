<h1>Friends List</h1>

<div class="search-area">
    <h3>Search Friends</h3>

    <%= form_with url: search_friend_path, method: :get, local: false do |f| %>
        <div class="form-group row">
            <div class="col-sm-9 pr-0">
                <%= f.text_field :friend, placeholder: 'Name or email', autofocus:true, class: 'form-control form-control-lg' %>
            </div>
            
            <div class="col-sm-3 pl-0">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %> 
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="friend-result">
</div>

<% if !@friends.empty? %>
    <%= render 'friends/list'%>
<% end %>